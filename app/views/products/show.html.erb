<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8">
          
        <br><h3>REVIEWS: </h3><br>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Rating</th>
              <th>Review</th>
              <th>User</th>
              <th>Date</th>
            </tr>  
          </thead>
          <tbody>
            <% @reviews_with_user.each do |review| %>
              <tr>
                <td><%= review[:rating] %></td>
                <td><%= review[:description] %></td>
                <td><%= review["user"] %></td>
                <td><%= review[:updated_at].to_date %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>  
      <div class="col-sm-4">
        <br><br><br><br>
        <h3>Review this item: </h3>
              
        <%= form_for :review, :url => product_reviews_path(@product.id) do |f| %>
            Review: <br><%= f.text_area :description %>
            <br>Rating: <%= f.select :rating, ((0..10).map {|i| [i,i] }) %>
            
          <%= f.submit "Submit" %>
        <% end %>  
      </div>
    </div>
    
  </article>
  

</section>
