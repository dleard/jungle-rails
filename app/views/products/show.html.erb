<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8">
        <% @reviews.each do |review| %>
          <%= review.inspect %>
        <% end %>  
        <br><h3>REVIEWS: </h3><br>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Rating</th>
              <th>Review</th>
              <th>User</th>
            </tr>  
          </thead>
          <tbody>
            <tr>
              <td>10</td>
              <td>"THIS IS OK. I LIKE IT OK I GUESS"</td>
              <td>"RANDY REVIEWINGTON"</td>
            </tr>
          </tbody>
        </table>
      </div>  
    </div>

  </article>

</section>
